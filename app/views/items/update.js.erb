<% if @item.complete? %>
  $('#item-' + <%= @item.id %>).remove();
  $('#complete-tasks').prepend('<%= j render partial: 'item', locals: { list: @list, item: @item } %>')
<% else %>
  $('#incomplete-tasks').prepend('<%= j render partial: 'item', locals: { list: @list, item: @item } %>')
<% end %>
$('#incompleted-item-count').html('<%= @item.list.incompleted_items.count %>');
